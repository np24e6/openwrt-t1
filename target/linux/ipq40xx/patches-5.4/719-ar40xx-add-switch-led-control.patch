+static int
+ar40xx_sw_get_port_led(struct switch_dev *dev,
+		       const struct switch_attr *attr,
+		       struct switch_val *val)
+{
+	struct ar40xx_priv *priv = swdev_to_ar40xx(dev);
+	int led100, led1000;
+	int force100, force1000;
+	int mode100, mode1000;
+
+	if (val->port_vlan >= AR40XX_NUM_PHYS)
+		return -EINVAL;
+
+	led100 = ar40xx_phy_mmd_read(priv, val->port_vlan, 7, QCA807X_MMD7_LED_100N_2);
+	led1000 = ar40xx_phy_mmd_read(priv, val->port_vlan, 7, QCA807X_MMD7_LED_1000N_2);
+
+	force100 = led100 & QCA807X_GPIO_FORCE_EN;
+	force1000 = led1000 & QCA807X_GPIO_FORCE_EN;
+
+	mode100 = led100 & QCA807X_GPIO_FORCE_MODE_MASK;
+	mode1000 = led1000 & QCA807X_GPIO_FORCE_MODE_MASK;
+
+	if (force100 != force1000) {
+		val->value.i = -1;
+		return 0;
+	}
+
+	if (mode100 != mode1000) {
+		val->value.i = -1;
+		return 0;
+	}
+
+	if (force100) {
+		switch (mode100) {
+		case QCA807X_GPIO_FORCE_MODE_MASK_OFF:
+			val->value.i = AR40XX_PORT_LED_MODE_OFF;
+			break;
+		case QCA807X_GPIO_FORCE_MODE_MASK_ON:
+			val->value.i = AR40XX_PORT_LED_MODE_ON;
+			break;
+		default:
+			val->value.i = -1;
+			break;
+		}
+	} else {
+		val->value.i = AR40XX_PORT_LED_MODE_STATUS;
+	}
+
+	return 0;
+}
+
+static int
+ar40xx_sw_set_port_led(struct switch_dev *dev,
+		       const struct switch_attr *attr,
+		       struct switch_val *val)
+{
+	struct ar40xx_priv *priv = swdev_to_ar40xx(dev);
+	int led100;
+	int led1000;
+
+	if (val->port_vlan >= AR40XX_NUM_PHYS)
+		return -EINVAL;
+
+	led100 = ar40xx_phy_mmd_read(priv, val->port_vlan, 7, QCA807X_MMD7_LED_100N_2);
+	led1000 = ar40xx_phy_mmd_read(priv, val->port_vlan, 7, QCA807X_MMD7_LED_1000N_2);
+
+	switch (val->value.i) {
+	case AR40XX_PORT_LED_MODE_OFF:
+		led100 |= QCA807X_GPIO_FORCE_EN;
+		led100 &= ~QCA807X_GPIO_FORCE_MODE_MASK;
+		led100 |= QCA807X_GPIO_FORCE_MODE_MASK_OFF;
+		led1000 |= QCA807X_GPIO_FORCE_EN;
+		led1000 &= ~QCA807X_GPIO_FORCE_MODE_MASK;
+		led1000 |= QCA807X_GPIO_FORCE_MODE_MASK_OFF;
+		break;
+	case AR40XX_PORT_LED_MODE_ON:
+		led100 |= QCA807X_GPIO_FORCE_EN;
+		led100 &= ~QCA807X_GPIO_FORCE_MODE_MASK;
+		led100 |= QCA807X_GPIO_FORCE_MODE_MASK_ON;
+		led1000 |= QCA807X_GPIO_FORCE_EN;
+		led1000 &= ~QCA807X_GPIO_FORCE_MODE_MASK;
+		led1000 |= QCA807X_GPIO_FORCE_MODE_MASK_ON;
+		break;
+	case AR40XX_PORT_LED_MODE_STATUS:
+		led100 &= ~QCA807X_GPIO_FORCE_EN;
+		led1000 &= ~QCA807X_GPIO_FORCE_EN;
+		break;
+	default:
+		return -EINVAL;
+	}
+
+	ar40xx_phy_mmd_write(priv, val->port_vlan, 7, QCA807X_MMD7_LED_100N_2, led100);
+	ar40xx_phy_mmd_write(priv, val->port_vlan, 7, QCA807X_MMD7_LED_1000N_2, led1000);
+
+	return 0;
+}
